<?xml version="1.0" encoding="UTF-8"?>
<sml:SensorML xmlns:gml="http://www.opengis.net/gml" xmlns:sml="http://www.opengis.net/sensorML/1.0"
   xmlns:swe="http://www.opengis.net/swe/1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xmlns:xlink="http://www.w3.org/1999/xlink"
   xsi:schemaLocation="http://www.opengis.net/sensorML/1.0 file:///C:\Data\SensorMLschema\sensorML\1.0\base\sensorML.xsd"
   version="1.0">
   <sml:member>
      <sml:ProcessChain gml:id="PROCESS">
         <sml:inputs>
            <sml:InputList>
               <sml:input name="time">
                  <swe:DataRecord gml:id="INPUT_TIME">
                     <swe:field name="start">
                        <swe:Time definition="urn:ogc:def:phenomenon:time" referenceFrame="urn:ogc:def:crs:julianTime">
                           <swe:uom code="s"/>
                        </swe:Time>
                     </swe:field>
                     <swe:field name="stop">
                        <swe:Time definition="urn:ogc:def:phenomenon:time" referenceFrame="urn:ogc:def:crs:julianTime">
                           <swe:uom code="s"/>
                        </swe:Time>
                     </swe:field>
                     <swe:field name="step">
                        <swe:Quantity definition="urn:ogc:def:phenomenon:duration">
                           <swe:uom code="s"/>
                        </swe:Quantity>
                     </swe:field>
                  </swe:DataRecord>
               </sml:input>
            </sml:InputList>
         </sml:inputs>
         <sml:outputs>
            <sml:OutputList>
               <sml:output name="ECEF_location">
                  <swe:Vector definition="urn:ogc:def:data:locationVector" referenceFrame="urn:ogc:def:crs:ecef_wgs84">
                     <swe:coordinate name="x">
                        <swe:Quantity definition="urn:ogc:def:phenomenon:distance">
                           <swe:uom code="m"/>
                        </swe:Quantity>
                     </swe:coordinate>
                     <swe:coordinate name="y">
                        <swe:Quantity definition="urn:ogc:def:phenomenon:distance">
                           <swe:uom code="m"/>
                        </swe:Quantity>
                     </swe:coordinate>
                     <swe:coordinate name="z">
                        <swe:Quantity definition="urn:ogc:def:phenomenon:distance">
                           <swe:uom code="m"/>
                        </swe:Quantity>
                     </swe:coordinate>
                  </swe:Vector>
               </sml:output>
            </sml:OutputList>
         </sml:outputs>           
         <sml:components>
            <sml:ComponentList>
               <!-- SOS call to get scanner data -->
               <sml:component name="ngSos">
                  <sml:ProcessModel>
                     <sml:inputs>
                        <sml:InputList>
                           <sml:input name="time" xlink:href="#INPUT_TIME"/>
                        </sml:InputList>
                     </sml:inputs>
                     <sml:outputs>
                        <sml:OutputList>
                           <sml:output name="observationInfo">
                              <swe:DataRecord>
                                 <swe:field name="name">
                                    <swe:Category/>
                                 </swe:field>
                                 <swe:field name="procedure">
                                    <swe:Category/>
                                 </swe:field>
                                 <swe:field name="location">
                                    <swe:Vector referenceFrame="urn:ogc:def:crs:EPSG:6.1:4329">
                                       <swe:coordinate name="lat">
                                          <swe:Quantity/>
                                       </swe:coordinate>
                                       <swe:coordinate name="lon">
                                          <swe:Quantity/>
                                       </swe:coordinate>
                                       <swe:coordinate name="alt">
                                          <swe:Quantity/>
                                       </swe:coordinate>
                                    </swe:Vector>
                                 </swe:field>
                              </swe:DataRecord>
                           </sml:output>
                           <sml:output name="observationData">
                              <swe:DataRecord gml:id="TROOPS_DATA">
                                 <swe:field name="Components">
                                    <swe:SimpleDataRecord>
                                       <swe:field name="Time">
                                          <swe:Time definition="urn:ogc:data:time:iso8601"/>
                                       </swe:field>
                                       <swe:field name="feature">
                                          <swe:Text definition="urn:ogc:data:feature"/>
                                       </swe:field>
                                       <swe:field name="access">
                                          <swe:Category definition="urn:ogc:def:phenomenon:Mitre::CoT:access"/>
                                       </swe:field>
                                       <swe:field name="ce">
                                          <swe:Quantity definition="urn:ogc:def:phenomenon:Mitre::CoT:ce">
                                             <swe:uom code="m"/>
                                          </swe:Quantity>
                                       </swe:field>
                                       <swe:field name="how">
                                          <swe:Category definition="urn:ogc:def:phenomenon:Mitre::CoT:how"/>
                                       </swe:field>
                                       <swe:field name="howInfo">
                                          <swe:Category definition="urn:ogc:def:phenomenon:Mitre::CoT:howInfo"/>
                                       </swe:field>
                                       <swe:field name="le">
                                          <swe:Quantity definition="urn:ogc:def:phenomenon:Mitre::CoT:le">
                                             <swe:uom code="m"/>
                                          </swe:Quantity>
                                       </swe:field>
                                       <swe:field name="opex">
                                          <swe:Category definition="urn:ogc:def:phenomenon:Mitre::CoT:opex"/>
                                       </swe:field>
                                       <swe:field name="qos">
                                          <swe:Category definition="urn:ogc:def:phenomenon:Mitre::CoT:qos"/>
                                       </swe:field>
                                       <swe:field name="stale">
                                          <swe:Category definition="urn:ogc:def:phenomenon:Mitre::CoT:stale"/>
                                       </swe:field>
                                       <swe:field name="start">
                                          <swe:Category definition="urn:ogc:def:phenomenon:Mitre::CoT:start"/>
                                       </swe:field>
                                       <swe:field name="type">
                                          <swe:Category definition="urn:ogc:def:phenomenon:Mitre::CoT:type"/>
                                       </swe:field>
                                       <swe:field name="typeInfo">
                                          <swe:Category definition="urn:ogc:def:phenomenon:Mitre::CoT:typeInfo"/>
                                       </swe:field>
                                       <swe:field name="uid">
                                          <swe:Category definition="urn:ogc:def:phenomenon:Mitre::CoT:uid"/>
                                       </swe:field>
                                       <swe:field name="altitude">
                                          <swe:Quantity definition="urn:ogc:def:phenomenon:OGC::altitude">
                                             <swe:uom code="m"/>
                                          </swe:Quantity>
                                       </swe:field>
                                       <swe:field name="latitude">
                                          <swe:Quantity definition="urn:ogc:def:phenomenon:OGC::latitude">
                                             <swe:uom code="rad"/>
                                          </swe:Quantity>
                                       </swe:field>
                                       <swe:field name="longitude">
                                          <swe:Quantity definition="urn:ogc:def:phenomenon:OGC::longitude">
                                             <swe:uom code="rad"/>
                                          </swe:Quantity>
                                       </swe:field>
                                    </swe:SimpleDataRecord>
                                 </swe:field>
                              </swe:DataRecord>
                           </sml:output>
                        </sml:OutputList>
                     </sml:outputs>
                     <sml:parameters>
                        <sml:ParameterList>
                           <sml:parameter name="sosOptions">
                              <swe:DataRecord fixed="true">
                                 <swe:field name="endPoint">
                                    <swe:Category definition="urn:ogc:def:identifier:URL">
                                       <swe:value>http://ww6.geoenterpriselab.com:8080/SOS_CoT/sos</swe:value>
                                    </swe:Category>
                                 </swe:field>
                                 <swe:field name="requestMethod">
                                    <swe:Category definition="urn:ogc:def:identifier:URL">
                                       <swe:value>POST</swe:value>
                                    </swe:Category>
                                 </swe:field>
                                 <swe:field name="version">
                                    <swe:Category definition="urn:ogc:def:identifier:version">
                                       <swe:value>1.0.0</swe:value>
                                    </swe:Category>
                                 </swe:field>
                                 <swe:field name="offering">
                                    <swe:Category>
                                       <swe:value>cotMetadata</swe:value>
                                    </swe:Category>
                                 </swe:field>
                                 <swe:field name="observables">
                                    <swe:Category>
                                       <swe:value>urn:ogc:def:phenomenon:NG::cotMetadata</swe:value>
                                    </swe:Category>
                                 </swe:field>
                                 <swe:field name="procedures">
                                    <swe:Category>
                                       <swe:value>urn:ogc:def:procedure:NGITTASC:SS.004A08BC006D0000</swe:value>
                                    </swe:Category>
                                 </swe:field>
                                 <swe:field name="format">
                                    <swe:Category definition="urn:ogc:def:identifier:mimeType">
                                       <swe:value>text/xml;subtype="om/1.0.0"</swe:value>
                                    </swe:Category>
                                 </swe:field>
                              </swe:DataRecord>
                           </sml:parameter>
                        </sml:ParameterList>
                     </sml:parameters>
                     <sml:method xlink:href="urn:ogc:def:process:SOS:1.0"/>
                  </sml:ProcessModel>
               </sml:component>
               <!--~~~~~~~~~~~~~~~~~~~~-->
               <!-- LLA to ECEF -->
               <!--~~~~~~~~~~~~~~~~~~~~-->
               <sml:component name="LLAtoECEF">
                  <sml:ProcessModel>
                     <sml:inputs>
                        <sml:InputList>
                           <sml:input name="LLA_location">
                              <swe:Vector definition="urn:ogc:def:data:locationVector" referenceFrame="urn:ogc:def:crs:epsg4329">
                                 <swe:coordinate name="latitude">
                                    <swe:Quantity definition="urn:ogc:def:phenomenon:angle">
                                       <swe:uom code="rad"/>
                                    </swe:Quantity>
                                 </swe:coordinate>
                                 <swe:coordinate name="longitude">
                                    <swe:Quantity definition="urn:ogc:def:phenomenon:angle">
                                       <swe:uom code="rad"/>
                                    </swe:Quantity>
                                 </swe:coordinate>
                                 <swe:coordinate name="altitude">
                                    <swe:Quantity definition="urn:ogc:def:phenomenon:distance">
                                       <swe:uom code="m"/>
                                       <swe:value>635</swe:value>
                                    </swe:Quantity>
                                 </swe:coordinate>
                              </swe:Vector>
                           </sml:input>
                        </sml:InputList>
                     </sml:inputs>
                     <sml:outputs>
                        <sml:OutputList>
                           <sml:output name="ECEF_location">
                              <swe:Vector definition="urn:ogc:def:data:locationVector" referenceFrame="urn:ogc:def:crs:ecef_wgs84">
                                 <swe:coordinate name="x">
                                    <swe:Quantity definition="urn:ogc:def:phenomenon:distance">
                                       <swe:uom code="m"/>
                                    </swe:Quantity>
                                 </swe:coordinate>
                                 <swe:coordinate name="y">
                                    <swe:Quantity definition="urn:ogc:def:phenomenon:distance">
                                       <swe:uom code="m"/>
                                    </swe:Quantity>
                                 </swe:coordinate>
                                 <swe:coordinate name="z">
                                    <swe:Quantity definition="urn:ogc:def:phenomenon:distance">
                                       <swe:uom code="m"/>
                                    </swe:Quantity>
                                 </swe:coordinate>
                              </swe:Vector>
                           </sml:output>
                        </sml:OutputList>
                     </sml:outputs>
                     <sml:method xlink:href="urn:ogc:def:process:LLAtoECEF:2.0"/>
                  </sml:ProcessModel>
               </sml:component>
               <!-- connection -->
            </sml:ComponentList>
         </sml:components>
         <sml:connections>
            <sml:ConnectionList>
               <sml:connection>
                  <sml:Link>
                     <sml:source ref="this/inputs/time"/>
                     <sml:destination ref="ngSos/inputs/time"/>
                  </sml:Link>
               </sml:connection>
        <!--       <sml:connection>
                  <sml:Link>
                     <sml:source ref="ngSos/outputs/observationData/Components/altitude"/>
                     <sml:destination ref="LLAtoECEF/inputs/LLA_location/altitude"/>
                  </sml:Link>
               </sml:connection>-->
               <sml:connection>
                  <sml:Link>
                     <sml:source ref="ngSos/outputs/observationData/Components/latitude"/>
                     <sml:destination ref="LLAtoECEF/inputs/LLA_location/latitude"/>
                  </sml:Link>
               </sml:connection>
               <sml:connection>
                  <sml:Link>
                     <sml:source ref="ngSos/outputs/observationData/Components/longitude"/>
                     <sml:destination ref="LLAtoECEF/inputs/LLA_location/longitude"/>
                  </sml:Link>
               </sml:connection>
               <sml:connection>
                  <sml:Link>
                     <sml:source ref="LLAtoECEF/outputs/ECEF_location"/>
                     <sml:destination ref="this/outputs/ECEF_location"/>
                  </sml:Link>
               </sml:connection>
            </sml:ConnectionList>
         </sml:connections>
      </sml:ProcessChain>
   </sml:member>
</sml:SensorML>
