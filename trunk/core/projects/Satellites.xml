<?xml version="1.0" encoding="UTF-8"?>
<STTProject xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:gml="http://www.opengis.net/gml" xmlns:ogc="http://www.opengis.net/ogc" xmlns:sld="http://www.opengis.net/sld" xmlns:swe="http://www.opengis.net/swe" xmlns:sldx="http://vast.uah.edu/sldx">
   <!-- Global metadata about the project -->
   <Identification>
      <name>Satellite Demo Project</name>
      <author>Alex Robin</author>
      <dateCreated>2006-07-10T09:23:00</dateCreated>
      <description>Satellite Footprints and Coincidence Search</description>
   </Identification>
   <!-- List of scenes (separate 2d or 3D view windows) -->
   <SceneList>
      <member>
         <Scene id="SCENE_01">
            <name>3D ECF View</name>
            <time>
               <TimeSettings>
                  <currentTime>2004-01-01T12:00:00Z</currentTime>
                  <lagTime>3600</lagTime>
                  <leadTime>3600</leadTime>
                  <stepTime>60</stepTime>
                  <realTimeMode>on</realTimeMode>
               </TimeSettings>
            </time>
            <view>
               <ViewSettings>
                  <backgroundColor>#FFFFFF</backgroundColor>
                  <cameraMode>ORTHO</cameraMode>
                  <cameraPos>0 0 10</cameraPos>
                  <targetPos>0 0 0</targetPos>
                  <upDirection>0 1 0</upDirection>
                  <orthoWidth>6.0</orthoWidth>
                  <orthoHeight>4.0</orthoHeight>
                  <nearClip>0</nearClip>
                  <farClip>100</farClip>
                  <zFudgeFactor>1000</zFudgeFactor>
               </ViewSettings>
            </view>
            <contents>
               <DataList>
                  <name>Satellites</name>
                  <member visible="false">
                     <DataItem enabled="true">
                        <name>NOAA-13 Footprints</name>
                        <dataProvider xlink:href="#FOOTPRINT_SOS"/>
                        <style>
                           <sld:GridSymbolizer enabled="true">
                              <sld:Geometry>
                                 <sld:CssParameter name="geometry-x">
                                    <ogc:PropertyName>footprint/grid/row/point/lon</ogc:PropertyName>
                                 </sld:CssParameter>
                                 <sld:CssParameter name="geometry-y">
                                    <ogc:PropertyName>footprint/grid/row/point/lat</ogc:PropertyName>                                       
                                 </sld:CssParameter>
                              </sld:Geometry>
                              <sldx:Dimensions>
                                 <sld:CssParameter name="width">
                                    <ogc:PropertyName>footprint/gridWidth</ogc:PropertyName>
                                 </sld:CssParameter>
                                 <sld:CssParameter name="length">
                                    <ogc:PropertyName>footprint/gridLength</ogc:PropertyName>
                                 </sld:CssParameter>
                              </sldx:Dimensions>
                              <sld:Fill>
                                 <sld:CssParameter name="fill">#FF0000</sld:CssParameter>
                                 <sld:CssParameter name="fill-opacity">0.5</sld:CssParameter>
                              </sld:Fill>
                              <!--<sld:Stroke>
                                 <sld:CssParameter name="stroke">#FF6666</sld:CssParameter>
                              </sld:Stroke>-->
                           </sld:GridSymbolizer>
                        </style>
                        <style>
                           <sld:PointSymbolizer enabled="true">
                              <sld:Geometry>
                                 <sld:CssParameter name="geometry-x">
                                    <ogc:PropertyName>footprint/grid/row/point/lon</ogc:PropertyName>
                                 </sld:CssParameter>
                                 <sld:CssParameter name="geometry-y">
                                    <ogc:PropertyName>footprint/grid/row/point/lat</ogc:PropertyName>                                       
                                 </sld:CssParameter> 
                              </sld:Geometry>
                              <sld:Graphic>
                                 <sld:Mark>
                                    <sld:WellKnownName>circle</sld:WellKnownName>
                                    <sld:Fill>
                                       <sld:CssParameter name="fill">#000000</sld:CssParameter>                                       
                                    </sld:Fill>
                                 </sld:Mark>
                                 <sld:Size>2</sld:Size>
                              </sld:Graphic>
                           </sld:PointSymbolizer>
                        </style> 
                     </DataItem>
                  </member>                  
                  <member>
                     <DataList>
                        <name>Geographic Data</name>
                        <member visible="true">
                           <DataItem enabled="true">
                              <name>Coast Lines - 100km</name>
                              <dataProvider xlink:href="#DATASET_04"/>
                              <style>
                                 <sld:LineSymbolizer enabled="true">
                                    <sld:Geometry>
                                       <sld:CssParameter name="geometry-breaks">
                                          <ogc:PropertyName>lineData/segmentSize</ogc:PropertyName>
                                       </sld:CssParameter>
                                       <sld:CssParameter name="geometry-x">
                                          <ogc:PropertyName>lineData/segment/point/lon</ogc:PropertyName>
                                       </sld:CssParameter>
                                       <sld:CssParameter name="geometry-y">
                                          <ogc:PropertyName>lineData/segment/point/lat</ogc:PropertyName>
                                       </sld:CssParameter>                                       
                                    </sld:Geometry>
                                    <sld:Stroke>
                                       <sld:CssParameter name="stroke">#CCCCCC</sld:CssParameter>
                                       <sld:CssParameter name="stroke-width">1</sld:CssParameter>
                                    </sld:Stroke>
                                 </sld:LineSymbolizer>
                              </style>                             
                           </DataItem>
                        </member>
                        <member visible="false">
                           <DataItem enabled="true">
                              <name>Boundaries</name>
                              <dataProvider xlink:href="#DATASET_03"/>
                              <style>
                                 <sld:LineSymbolizer enabled="true">
                                    <sld:Geometry>
                                       <sld:CssParameter name="geometry-breaks">
                                          <ogc:PropertyName>lineData/segmentSize</ogc:PropertyName>
                                       </sld:CssParameter>
                                       <sld:CssParameter name="geometry-x">
                                          <ogc:PropertyName>lineData/segment/point/lon</ogc:PropertyName>
                                       </sld:CssParameter>
                                       <sld:CssParameter name="geometry-y">
                                          <ogc:PropertyName>lineData/segment/point/lat</ogc:PropertyName>
                                       </sld:CssParameter>                                       
                                    </sld:Geometry>
                                    <sld:Stroke>
                                       <sld:CssParameter name="stroke">#000000</sld:CssParameter>
                                       <sld:CssParameter name="stroke-width">1</sld:CssParameter>
                                    </sld:Stroke>
                                 </sld:LineSymbolizer>
                              </style>
                           </DataItem>
                        </member>
                     </DataList>
                  </member>
               </DataList>
            </contents>
         </Scene>
      </member>
   </SceneList>
   <!-- List of data resources -->
   <ResourceList>
      <member>
         <ResourceList>
            <name>Base DataSets</name>
            <member>
               <SWEDataProvider id="DATASET_03">
                  <name>World Boundaries - 13</name>
                  <description>World Country Boundaries</description>
                  <format>SWE</format>
                  <sweData xlink:href="http://vast.uah.edu/SWEData/countries/mapbdy13.xml"/>
               </SWEDataProvider>
            </member>
            <member>
               <SWEDataProvider id="DATASET_04">
                  <name>World Coast Lines - 100</name>
                  <description>World Coast Lines</description>
                  <format>SWE</format>
                  <sweData xlink:href="http://vast.uah.edu/SWEData/coastlines/mapcil100.xml"/>
               </SWEDataProvider>
            </member>
            <member>
               <OWSDataProvider id="FOOTPRINT_SOS">
                  <name>NOAA-13 Footprints</name>
                  <description>Nadir Track for NOAA-13 Satellite</description>
                  <layerId>NOAA_13</layerId>
                  <request postUrl="http://localhost:8080/ows-dev/footprint">
                     <GetObservation service="SOS" version="0.0.31">
                        <offering>NOAA_13</offering>
                        <eventTime>
                           <ogc:During>
                              <gml:TimePeriod>
                                 <gml:beginPosition>1994-01-01T04:40:00Z</gml:beginPosition>
                                 <gml:endPosition>1994-01-01T06:40:00Z</gml:endPosition>
                              </gml:TimePeriod>
                           </ogc:During>
                        </eventTime>
                        <resultFormat>application/com-xml</resultFormat>
                        <resultModel>swe:DataValueType</resultModel>
                     </GetObservation>
                  </request>
               </OWSDataProvider>
            </member>
         </ResourceList>
      </member>
   </ResourceList>
</STTProject>
