                                       <sld:CssParameter name="stroke-width">1</sld:CssParameter>
                                    </sld:Stroke>
                                 </sld:LineSymbolizer>
                              </style>
                           </DataItem>
                        </member>
                     </DataList>
                  </member>
               </DataList>
            </contents>
         </Scene>
      </member>
