<?xml version="1.0" encoding="UTF-8"?>
<sml:SensorML xmlns:sml="http://www.opengis.net/sensorML" xmlns:swe="http://www.opengis.net/swe"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xlink="http://www.w3.org/1999/xlink"
	          xsi:schemaLocation="http://www.opengis.net/sensorML ../base/sensorML.xsd" version="1.0">
	<sml:Process id="DOPPLER_GEOLOCATION_CHAIN">
		<!--~~~~~~~~~~~~~~~~~~-->
		<!-- Inputs & Outputs -->
		<!--~~~~~~~~~~~~~~~~~~-->
		<sml:inputs>
			<sml:InputList>
				<sml:input name="binIndex">
					<swe:Count definition="urn:ogc:data:index"/>
				</sml:input>
				<sml:input name="azimuth">
					<swe:Quantity definition="urn:ogc:phenomenon:angle"/>
				</sml:input>
				<sml:input name="elevation"> 
					<swe:Quantity definition="urn:ogc:phenomenon:angle"/>
				</sml:input>
				<sml:input name="radarLocation">
				   <swe:Vector definition="urn:ogc:def:data:locationVector" referenceFrame="urn:ogc:def:crs:epsg4329">
				      <swe:coordinate name="latitude">
				         <swe:Quantity definition="urn:ogc:def:phenomenon:latitude" uom="deg"/>
				      </swe:coordinate>
				      <swe:coordinate name="longitude">
				         <swe:Quantity definition="urn:ogc:def:phenomenon:longitude" uom="deg"/>
				      </swe:coordinate>
				      <swe:coordinate name="altitude">
				         <swe:Quantity definition="urn:ogc:def:phenomenon:altitude" uom="m"/>
				      </swe:coordinate>
				   </swe:Vector>
				</sml:input>
			</sml:InputList>
		</sml:inputs>
		<sml:outputs>
			<sml:OutputList>
				<sml:output name="geoLocation">
				   <swe:Vector id="LOCATION_DATA" referenceFrame="urn:ogc:crs:epsg4329">
				      <swe:component name="latitude">
				         <swe:Quantity definition="urn:ogc:phenomenon:latitude" uom="deg"/>
				      </swe:component>
				      <swe:component name="longitude">
				         <swe:Quantity definition="urn:ogc:phenomenon:longitude" uom="deg"/>
				      </swe:component>
				      <swe:component name="altitude">
				         <swe:Quantity definition="urn:ogc:phenomenon:altitude" uom="m"/>
				      </swe:component>
				   </swe:Vector>
				</sml:output>
			</sml:OutputList>
		</sml:outputs>
		<sml:processes>
			<sml:ProcessList>
				<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
				<!-- Bin Position in Sensor CRS -->
				<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
				<sml:process name="binDistanceLUT">
				   <sml:ProcessModel id="PROCESS">
				      <sml:inputs>
				         <sml:InputList>
				            <sml:input name="index">
				               <swe:Quantity definition="urn:ogc:def:data:index"/>
				            </sml:input>
				         </sml:InputList>
				      </sml:inputs>
				      <sml:outputs>
				         <sml:OutputList>
				            <sml:output name="binDistance">
				               <swe:Quantity definition="urn:ogc:def:phenomenon:distance" uom="m"/>
				            </sml:output>
				         </sml:OutputList>
				      </sml:outputs>
				      <sml:parameters>
				         <sml:ParameterList>
				            <sml:parameter name="interpolationMethod">
				               <swe:Category>linear</swe:Category>
				            </sml:parameter>
				            <sml:parameter name="table">
				               <swe:Curve arraySize="2">
				                  <swe:definition>
				                     <swe:Coordinates>
				                        <swe:axis name="index">
				                           <swe:Quantity definition="urn:ogc:def:data:normalizedIndex"/>
				                        </swe:axis>
				                        <swe:axis name="binDistance">
				                           <swe:Quantity definition="urn:ogc:def:phenomenon:angle" uom="rad"/>
				                        </swe:axis>
				                     </swe:Coordinates>
				                  </swe:definition>
				                  <swe:tupleValues>0,0 459,230000</swe:tupleValues>
				               </swe:Curve>
				            </sml:parameter>
				         </sml:ParameterList>
				      </sml:parameters>
				      <sml:method xlink:href="urn:ogc:def:process:LUT1D:1.0"/>
				   </sml:ProcessModel>
				</sml:process>			   
				<!--~~~~~~~~~~~~~~~~~~~~~~~~~~-->
				<!-- LLA,PRY to ECEF position -->
				<!--~~~~~~~~~~~~~~~~~~~~~~~~~~-->
				<sml:process name="llaToEcef">
				   <sml:ProcessModel>
				      <sml:inputs>
				         <sml:InputList>
				            <sml:input name="geoLocation">
				               <swe:Vector definition="urn:ogc:def:data:locationVector" referenceFrame="urn:ogc:def:crs:epsg4329">
				                  <swe:coordinate name="latitude">
				                     <swe:Quantity definition="urn:ogc:def:phenomenon:latitude" uom="deg"/>
				                  </swe:coordinate>
				                  <swe:coordinate name="longitude">
				                     <swe:Quantity definition="urn:ogc:def:phenomenon:longitude" uom="deg"/>
				                  </swe:coordinate>
				                  <swe:coordinate name="altitude">
				                     <swe:Quantity definition="urn:ogc:def:phenomenon:altitude" uom="m"/>
				                  </swe:coordinate>
				               </swe:Vector>
				            </sml:input>
				            <sml:input name="localOrientation">
				               <swe:Vector definition="urn:ogc:def:data:orientationVector" referenceFrame="urn:ogc:def:crs:ENU">
				                  <swe:coordinate name="x">
				                     <swe:Quantity definition="urn:ogc:phenomenon:angle" uom="deg"/>
				                  </swe:coordinate>
				                  <swe:coordinate name="y">
				                     <swe:Quantity definition="urn:ogc:phenomenon:angle" uom="deg"/>
				                  </swe:coordinate>
				                  <swe:coordinate name="z">
				                     <swe:Quantity definition="urn:ogc:phenomenon:angle" uom="deg"/>
				                  </swe:coordinate>
				                  <swe:order>
				                     <swe:Category>ZXY</swe:Category>
				                  </swe:order>
				               </swe:Vector>
				            </sml:input>
				         </sml:InputList>
				      </sml:inputs>
				      <sml:outputs>
				         <sml:OutputList>
				            <sml:output name="ecefPosition">
				               <swe:DataArray arraySize="16">
				                  <swe:component>
				                     <swe:Quantity/>
				                  </swe:component>
				               </swe:DataArray>				               
				            </sml:output>
				         </sml:OutputList>
				      </sml:outputs>
						<sml:parameters>
							<sml:ParameterList>
								<sml:parameter name="datum">
									<swe:Category>urn:ogc:datum:wgs84</swe:Category>
								</sml:parameter>
							</sml:ParameterList>
						</sml:parameters>
				      <sml:method xlink:href="urn:ogc:def:process:LLAToECEF:1.0"/>
				   </sml:ProcessModel>
				</sml:process>
				<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
				<!-- Sensor CRS to ECEF Coordinate Transform -->
				<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
				<sml:process name="sensorToEcef">
				   <sml:ProcessModel>
						<sml:inputs>
							<sml:InputList>
								<sml:input name="referencePosition">
									<swe:DataArray arraySize="16">
										<swe:component>
											<swe:Quantity/>
										</swe:component>
									</swe:DataArray>
								</sml:input>
								<sml:input name="location">
								   <swe:Vector>
								      <swe:coordinate name="x">
								         <swe:Quantity uom="m">0.0</swe:Quantity>
								      </swe:coordinate>
								      <swe:coordinate name="y">
								         <swe:Quantity uom="m"/>
								      </swe:coordinate>
								      <swe:coordinate name="z">
								         <swe:Quantity uom="m">0.0</swe:Quantity>
								      </swe:coordinate>
								   </swe:Vector>
								</sml:input>
							</sml:InputList>
						</sml:inputs>
						<sml:outputs>
							<sml:OutputList>
								<sml:output name="location">
								   <swe:Vector>
								      <swe:coordinate name="x">
								         <swe:Quantity uom="m"/>
								      </swe:coordinate>
								      <swe:coordinate name="y">
								         <swe:Quantity uom="m"/>
								      </swe:coordinate>
								      <swe:coordinate name="z">
								         <swe:Quantity uom="m"/>
								      </swe:coordinate>
								   </swe:Vector>
								</sml:output>
							</sml:OutputList>
						</sml:outputs>
				      <sml:method xlink:href="urn:ogc:def:process:locationTransform:1.0"/>
				   </sml:ProcessModel>
				</sml:process>
				<!--~~~~~~~~~~~~~~~~~~~~~~-->
				<!-- ECEF to LLA location -->
				<!--~~~~~~~~~~~~~~~~~~~~~~-->
				<sml:process name="ecefToLLA">
				   <sml:ProcessModel>
						<sml:inputs>
							<sml:InputList>
							   <sml:input name="ecefLocation">
							      <swe:Vector>
							         <swe:coordinate name="x">
							            <swe:Quantity uom="m"/>
							         </swe:coordinate>
							         <swe:coordinate name="y">
							            <swe:Quantity uom="m"/>
							         </swe:coordinate>
							         <swe:coordinate name="z">
							            <swe:Quantity uom="m"/>
							         </swe:coordinate>
							      </swe:Vector>
								</sml:input>								
							</sml:InputList>
						</sml:inputs>
						<sml:outputs>
							<sml:OutputList>
								<sml:output name="geoLocation">
								   <swe:Vector>
								      <swe:coordinate name="latitude">
											<swe:Quantity definition="urn:ogc:phenomenon:latitude" uom="rad"/>
								      </swe:coordinate>
								      <swe:coordinate name="longitude">
											<swe:Quantity definition="urn:ogc:phenomenon:longitude" uom="rad"/>
								      </swe:coordinate>
								      <swe:coordinate name="altitude">
											<swe:Quantity definition="urn:ogc:phenomenon:altitude" uom="m"/>
								      </swe:coordinate>
								   </swe:Vector>
								</sml:output>
							</sml:OutputList>
						</sml:outputs>
						<sml:parameters>
							<sml:ParameterList>
								<sml:parameter name="datum">
									<swe:Category>urn:ogc:datum:wgs84</swe:Category>
								</sml:parameter>
							</sml:ParameterList>
						</sml:parameters>
				      <sml:method xlink:href="urn:ogc:def:process:ECEFToLLA:1.0"/>
				   </sml:ProcessModel>
				</sml:process>
			</sml:ProcessList>
		</sml:processes>
		<!--~~~~~~~~~~~~~-->
		<!-- Connections -->
		<!--~~~~~~~~~~~~~-->
		<sml:connections>
			<sml:ConnectionList>
				<!-- bin position input -->
				<sml:connection>
					<sml:Link>
						<sml:source ref="this/inputs/binIndex"/>
					   <sml:destination ref="binDistanceLUT/inputs/index"/>
					</sml:Link>
				</sml:connection>
				<!-- llaToEcef inputs -->
				<sml:connection>
					<sml:Link>
						<sml:source ref="this/inputs/azimuth"/>
						<sml:destination ref="llaToEcef/inputs/localOrientation/z"/>
					</sml:Link>
				</sml:connection>
				<sml:connection>
					<sml:Link>
						<sml:source ref="this/inputs/elevation"/>
						<sml:destination ref="llaToEcef/inputs/localOrientation/x"/>
					</sml:Link>
				</sml:connection>
			   <sml:connection>
			      <sml:Link>
			         <sml:source ref="this/inputs/radarLocation"/>
			         <sml:destination ref="llaToEcef/inputs/geoLocation"/>
			      </sml:Link>
			   </sml:connection>
				<!-- location transform inputs -->
				<sml:connection>
					<sml:Link>
						<sml:source ref="llaToEcef/outputs/ecefPosition"/>
						<sml:destination ref="sensorToEcef/inputs/referencePosition"/>
					</sml:Link>
				</sml:connection>
			   <sml:connection>
			      <sml:Link>
			         <sml:source ref="binDistanceLUT/outputs/binDistance"/>
			         <sml:destination ref="sensorToEcef/inputs/location/y"/>
			      </sml:Link>
			   </sml:connection>
				<!-- ecefToLLA inputs -->
				<sml:connection>
					<sml:Link>
						<sml:source ref="sensorToEcef/outputs/location"/>
						<sml:destination ref="ecefToLLA/inputs/ecefLocation"/>
					</sml:Link>
				</sml:connection>
				<!-- chain output -->
				<sml:connection>
					<sml:Link>
						<sml:source ref="ecefToLLA/outputs/geoLocation"/>
						<sml:destination ref="this/outputs/geoLocation"/>
					</sml:Link>
				</sml:connection>
			</sml:ConnectionList>
		</sml:connections>
	</sml:Process>
</sml:SensorML>